<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="60dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/permission1"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/battery"
            android:padding="5dp"
            android:text="permission"
            android:gravity="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/permission2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#66c0392b"
            android:padding="5dp"
            android:text="permission"
            android:textSize="20dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/permission3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#66c0392b"
            android:padding="5dp"
            android:visibility="invisible"
            android:text="permission"
            android:textSize="20dp" />

        <Button
            android:id="@+id/permission4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#66c0392b"
            android:padding="5dp"
            android:text="permission"
            android:visibility="invisible"
            android:textSize="20dp" />

        <Button
            android:id="@+id/permission5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#66c0392b"
            android:padding="5dp"
            android:text="permission"
            android:visibility="invisible"
            android:textSize="20dp" />

        <Button
            android:id="@+id/permission6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ffc0392b"
            android:padding="5dp"
            android:text="permission"
            android:visibility="invisible"
            android:textSize="20dp" />

        <Button
            android:id="@+id/permission_to_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ABCDEF"
            android:padding="15dp"
            android:visibility="invisible"
            android:text="Next" />
    </LinearLayout>


</HorizontalScrollView>